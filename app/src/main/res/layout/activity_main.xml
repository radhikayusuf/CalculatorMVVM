<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.root.calculatormvvm.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="os"
            type="com.example.root.calculatormvvm.ObservableString"/>
        <variable
            name="vm"
            type="com.example.root.calculatormvvm.ViewModel.MainActivityVM"/>
    </data>

<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="@{vm.layoutManager}"
            app:adapter="@{vm.adapter}"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_visible="@{vm.obs.isGone?false:true}">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnClearHis"
                    android:onClick="@{vm.btn}"
                    android:text="Clear"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnClose"
                    android:onClick="@{vm.btn}"
                    android:text="Close"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:elevation="6dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        app:layout_visible="@{vm.obs.isGone}">

        <EditText
            android:lines="1"
            android:paddingRight="10dp"
            android:id="@+id/etInput"
            android:text="@={vm.obs.value}"
            android:textSize="50dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#fff"
            android:clickable="false"
            android:focusable="false"/>



        <LinearLayout
            android:layout_below="@id/etInput"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHis"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="His"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnDel"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="Del"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn7"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btn8"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btn9"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnKali"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn4"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btn5"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btn6"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnMin"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn1"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btn2"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btn3"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnPlus"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn0"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnDot"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnEquals"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>
                <Button
                    android:id="@+id/btnBagi"
                    android:layout_margin="1dp"
                    android:background="#424242"
                    android:textSize="36dp"
                    android:textColor="#fff"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{vm.btn}"/>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>

</layout>